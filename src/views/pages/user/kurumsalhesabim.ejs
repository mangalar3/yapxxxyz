                <div class="form-group">
                  <label class="form-label">Güncel Şifre</label>
                  <input  class="form-control" id="guncelsifre" name="guncelsifre" type="password" placeholder="••••••">
                </div>

                <div class="form-group">
                  <label class="form-label">Yeni Şifre</label>
                  <input class="form-control" name="yenisifre" type="password" placeholder="••••••">
                </div>

