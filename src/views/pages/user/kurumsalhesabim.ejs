                  <label class="form-label">Şifreyi Onayla</label>
                  <input class="form-control" name="yenisifreonay" type="password" placeholder="••••••">
                </div>

              </div>
              <div class="text-right mt-3">
                <button type="button" class="btn btn-secondary">Değişikleri Kaydet</button>&nbsp;
              </div>
            </div>
