              <div class="card-body">
                <div class="form-group">
                  <label class="form-label">Dükkan Adı</label>
                  <input type="text" class="form-control mb-1" value="<%-Product.dukkanadi+' ' %>" disabled>
                </div>
                
                <div class="form-group">
                  <label class="form-label">E-mail</label>
                  <input type="text" class="form-control mb-1" value="<%-Product.email %>" disabled>
                  
                </div>
                
              </div>
              <div class="text-right mt-3">
                <button type="button" class="btn btn-secondary">Değişikleri Kaydet</button>&nbsp;
              </div>
            </div>
            <div class="tab-pane fade" id="account-change-password">
