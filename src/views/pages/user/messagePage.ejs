<title><%-title %></title>
<div class="container py-5 px-0">
    <!-- For demo purpose-->
  
    <div class="row rounded-lg overflow-hidden shadow" style="margin-left: 0px; margin-right: 0px;">
    
      <!-- Chat Box-->
      <div class="col-md-12 px-0">
        <div class="row px-0 d-none d-lg-block" style="margin-left: 0px; margin-right: 0px; background: linear-gradient(to bottom, #fed700, #d6b600);
                width: 100%; height: 80px;">
    
          <div class="row">
            <div class="col-md-1 mt-4">
              <div style="text-align: center; justify-content: center; border-radius: 20px; "><a href="/mesajlarim"><i
                    class="fas fa-arrow-left" style="font-size: 20px; color: white;"></i></a></div>
            </div>
            <div class="col-md-10 mt-3 " style="text-align: center; justify-content: center;">
              <h3
                style="color:rgb(255, 255, 255) ; margin-left: 2px; font-weight: bold; font-family:'Segoe UI', Tahoma, Geneva, Verdana, sans-serif ; ">
                <% if (UserInfo[0].userid=="3" ) { %>
                  <%- UserInfo[0].dukkanadi %>
                    <% } else { %>
                      <%- UserInfo[0].isim + ' ' + UserInfo[0].soyisim %>
                        <% } %>
                          </h4>
            </div>
            <div class="col-md-1 mt-4" style=" text-align:center; justify-content:center;">
              <a href="#" style="color:white; font-size: 20px;"> <i class="fa fa-info-circle"></i> </a>
            </div>
          </div>
        </div>
    
        <!-- Modify for mobile view -->
        <div class="row px-0 d-lg-none"
          style="background: linear-gradient(to bottom, #fed700, #d6b600); width: 100%; height: 80px;">
          <div class="col-4 mt-4">
            <div style="text-align: center; justify-content: center; border-radius: 20px; "><a href="/mesajlarim"><i
                  class="fas fa-arrow-left" style="font-size: 20px; color: white;"></i></a></div>
          </div>
          <div class="col-4 mt-3 " style="text-align: center; justify-content: center;">
            <h3
              style="color:rgb(255, 255, 255) ; margin-left: 2px; font-weight: bold; font-family:'Segoe UI', Tahoma, Geneva, Verdana, sans-serif ; ">
              <% if (UserInfo[0].userid=="3" ) { %>
                <%- UserInfo[0].dukkanadi %>
                  <% } else { %>
                    <%- UserInfo[0].isim + ' ' + UserInfo[0].soyisim %>
                      <% } %>
                        </h4>
          </div>
          <div class="col-4 mt-4" style=" text-align:center; justify-content:center;">
            <a href="#" style="color:white; font-size: 20px;"> <i class="fa fa-info-circle"></i> </a>
          </div>
        </div>
          

        <!--- Üst Navbar Bitti -->

        <div id="chatbox" class="px-4 py-5 chat-box bg-white">
     
          
          
          
      
          
         
          <% array.forEach(Product => { %>  
            <% if (myacc[0].email == Product.split('?:?:?')[2]) { %>
              <!-- Reciever Message-->
              <div class="media w-50 ml-auto mb-3">
                <div class="media-body">
                  <div class=" rounded py-2 px-3 mb-2" style="background-color: #e7c402;">
                    <p class="text-small mb-0 text-white" style="padding: 10px; font-weight: bold;"><%-Product.split('?:?:?')[0] %></p>
                  </div>
                  <p class="small text-muted" style="float: right; padding: 10px;"><%-Product.split('?:?:?')[1] %></p>
                </div>
              </div>
            <% } else { %>             
          <!-- Sender Message-->
          <div class="media w-50 mb-3"><img src="<% if (UserInfo[0].userid == "3") { %>     
            /uploads/images/<%- UserInfo[0].dukkanphoto %>        
          <% } else { %>https://ptetutorials.com/images/user-profile.png<% }  %>" alt="user" width="50" class="rounded-circle">
            <div class="media-body ml-3">
              <div class=" rounded py-2 px-3 mb-2"  style="background-color: #e7c402;">
                <p class="text-small mb-0 text-white" style="padding: 10px; font-weight: bold;"><%-Product.split('?:?:?')[0] %></p>
              </div>
              <p class="small text-muted" style="padding: 10px;"><%-Product.split('?:?:?')[1] %></p>
            </div>
          </div>
          
          <% }  %>
          <% }) %>
          
  
          
  
        </div>
  
        <!-- Typing area -->
        <form action="/sendMessagev2/<%-messages[0].Message_ID %>" method="post" enctype="application/x-www-form-urlencoded" class="" >
          <hr>
          <div class="input-group" style="height: 100px;">
            <input style="height: 100px;" name="message_content" type="text" placeholder="Mesajınızı Yazınız..." aria-describedby="button-addon2" class="form-control rounded-0 border-0 py-4">
            <div class="input-group-append">
              <button id="button-addon2" type="submit" class="btn btn-link"> <i style="font-size: 20px; color: #e7c402;" class="fa fa-paper-plane"></i></button>
            </div>
          </div>
        </form>
  
      </div>
    </div>
  </div>
