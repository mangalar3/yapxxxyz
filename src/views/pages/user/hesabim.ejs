<style>
    body{
    margin-top:20px;
    }

 

</style>
<link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css" rel="stylesheet">
<div class="container">
<div class="row flex-lg-nowrap">
  </div>

  
  

  <div class="col">
    <div class="row">
      <div class="col mb-3">
        
        <div class="card">
          <div class="card-body">
            <div class="e-profile">
              <div class="row">
                <% Product.forEach(Product => { %>
                    <div class="col d-flex flex-column flex-sm-row justify-content-between mb-3">
                        <div class="text-center text-sm-left mb-2 mb-sm-0">
                          <h4 class="pt-sm-2 pb-1 mb-0 text-nowrap"><%-Product.isim+' '+Product.soyisim %> </h4>
                          <div class="mt-2">
                          </div>
                        </div>
                        <div class="text-center text-sm-right">
                        </div>
                      </div>
                <% }) %>   
                
              </div>
              <ul class="nav nav-tabs">
                <li class="nav-item"><a href="" class="active nav-link">Ayarlar</a></li>
              </ul>
              
            <form action="/profiliguncelle" method="post">
              <div class="tab-content pt-3">
                <div class="tab-pane active">
                  <form class="form" novalidate="">
                    <div class="row">
                      <div class="col">
                        <% Product.forEach(Product => { %>
                        <div class="row">
                          <div class="col">
                            <div class="form-group">
                              <label>İsim</label>
                              <input class="form-control" type="text" name="isim" placeholder="<%-Product.isim+' '+Product.soyisim %>" value="<%-Product.isim%>">
                            </div>
                          </div>
                          <div class="col">
                            <div class="form-group">
                              <label>Soyisim</label>
                              <input class="form-control" type="text" name="soyisim" placeholder="<%-Product.email %>" value="<%-Product.soyisim %>">
                            </div>
                          </div>
                        </div>
                        <div class="row">
                            <div class="col">
                              <div class="form-group">
                                <label>Email</label>
                                <input class="form-control" name="email" type="text" placeholder="<%-Product.email %>" disabled>
                              </div>
                            </div>
                          </div> 
                        <% }) %>                      
                      </div>
                    </div>
                    <div class="row">
                      <div class="col-12 col-sm-6 mb-3">
                        <div class="mb-2"><b>Şifremi Değiştir</b></div>
                        <div class="row">
                          <div class="col">
                            <div class="form-group">
                              <label>Güncel Şifre</label>
                              <input class="form-control" name="guncelsifre" type="password" placeholder="••••••">
                            </div>
                          </div>
                        </div>
                        <div class="row">
                          <div class="col">
                            <div class="form-group">
                              <label>Yeni Şifre</label>
                              <input class="form-control" name="yenisifre" type="password" placeholder="••••••">
                            </div>
                          </div>
                        </div>
                        <div class="row">
                          <div class="col">
                            <div class="form-group">
                              <label>Şifreyi <span class="d-none d-xl-inline">Onayla</span></label>
                              <input class="form-control" name="yenisifreonay" type="password" placeholder="••••••"></div>
                          </div>
                        </div>
                      </div>                    
                    </div>
                    <div class="row">
                      <div class="col d-flex justify-content-end">
                        <button type="submit" class="btn btn-primary" type="submit">Değişikleri Kaydet</button>
                      </div>
                    </div>
                    
                  </form>
                  

                </div>
              </div>
            </form>
            </div>
          </div>
        </div>
      </div>
  </div>
</div>
</div>

